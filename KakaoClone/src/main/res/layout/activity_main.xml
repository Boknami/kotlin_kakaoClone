<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="30dp"
    tools:context=".MainActivity">

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text = "카카오톡을 시작합니다"
        android:textSize="25dp"
        android:textStyle="normal"
        android:textColor="#000000"
        android:textAlignment="center" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="이메일 또는 전화번호"
        android:inputType="textEmailAddress"
        android:layout_marginTop="40dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="비밀번호"
        android:inputType="textPassword"
        android:layout_marginTop="10dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#EAEAEA"
        android:textColor="#848484"
        android:layout_marginTop="15dp"
        android:text="로그인"/>
    <Button
        android:id="@+id/make_account_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:backgroundTint="#EAEAEA"
        android:textColor="@color/black"
        android:text="새로운 카카오계정 만들기"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text = "카카오계정 또는 비밀번호 찾기"
        android:textSize="15dp"
        android:textStyle="normal"
        android:layout_marginTop="5dp"
        android:textAlignment="center" />

    <android.widget.Button
        android:id="@+id/button_kakao_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:background="@drawable/kakao_login_large_narrow"
        />


  </LinearLayout>